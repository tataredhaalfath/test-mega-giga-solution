<!-- Begin Page Content -->
<div class="container-fluid">


  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Master Barang</h1>
    <a href="#" class="btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#addModal">
      <i class="fas fa-plus fa-sm text-white-50"></i>Tambah Barang <i class="ri-travesti-line"></i>
    </a>
  </div>

  <% if(msg.length !== 0){ %>
  <div class="alert alert-success">
    <%= msg %>
  </div>
  <%}  %>

  <% if(warning.length !== 0){ %>
  <div class="alert alert-danger">
    <%= warning %>
  </div>
  <%}  %>
  <div class="row">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Kode Barang</th>
              <th>Nama Barang</th>
              <th>Harga Jual</th>
              <th>Harga Beli</th>
              <th>Satuan</th>
              <th>Kategory</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(dataBarang.length <1) {%>
            <tr>
              <td colspan="8" class="text-center">Data Kosong</td>
            </tr>
            <% } %>

            <% let i=1;
             dataBarang.forEach(data=>{ %>
            <tr>
              <td>No. <%=i++%></td>
              <td><%=data.kode_barang%></td>
              <td><%=data.nama_barang%></td>
              <td><%=data.harga_jual%></td>
              <td><%=data.harga_beli%></td>
              <td><%=data.satuan%></td>
              <td><%=data.kategory%></td>
              <td>
                <a href="#" class="btn btn-info" data-toggle="modal" data-target="#editModal"
                  data-item="<%=JSON.stringify(data)%>"><i class="fa fa-pencil-alt"></i></a>
                <form action="/barang?_method=DELETE" method="post" class="d-inline">
                  <input type="hidden" name="kode_barang" value="<%=data.kode_barang%>">
                  <button class="btn btn-danger" onclick="confirm('Hapus Data?')"><i class="fa fa-trash"></i></button>
                </form>
              </td>

            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->


<!-- Modal Add -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Barang</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/barang" method="POST">
          <div class="form-group mb-3">
            <label for="nama_barang">Nama Barang </label>
            <input type="text" class="form-control" id="nama_barang" name="nama_barang" placeholder="nama barang"
              required>
          </div>
          <div class="form-group mb-3">
            <label for="harga_jual">Harga Jual </label>
            <input type="text" class="form-control" id="harga_jual" name="harga_jual" placeholder="harga jual" required>
          </div>
          <div class="form-group mb-3">
            <label for="harga_beli">Harga Beli </label>
            <input type="text" class="form-control" id="harga_beli" name="harga_beli" placeholder="harga beli" required>
          </div>
          <div class="form-group mb-3">
            <label for="satuan">Satuan </label>
            <input type="text" class="form-control" id="satuan" name="satuan" placeholder="satuan" required>
          </div>
          <div class="form-group mb-3">
            <label for="kategory">Kategory </label>
            <input type="text" class="form-control" id="kategory" name="kategory" placeholder="kategory" required>
          </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Simpan</button>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- Modal edit -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Barang</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post" action="/barang?_method=PUT">
          <input type="hidden" name="kode_barang" id="kode_barang">
          <div class="form-group mb-3">
            <label for="edit_nama_barang">Nama Barang </label>
            <input type="text" class="form-control" id="edit_nama_barang" name="nama_barang" placeholder="nama barang"
              required>
          </div>
          <div class="form-group mb-3">
            <label for="edit_harga_jual">Harga Jual </label>
            <input type="text" class="form-control" id="edit_harga_jual" name="harga_jual" placeholder="harga jual"
              required>
          </div>
          <div class="form-group mb-3">
            <label for="edit_harga_beli">Harga Beli </label>
            <input type="text" class="form-control" id="edit_harga_beli" name="harga_beli" placeholder="harga beli"
              required>
          </div>
          <div class="form-group mb-3">
            <label for="edit_satuan">Satuan </label>
            <input type="text" class="form-control" id="edit_satuan" name="satuan" placeholder="satuan" required>
          </div>
          <div class="form-group mb-3">
            <label for="edit_kategory">Kategory </label>
            <input type="text" class="form-control" id="edit_kategory" name="kategory" placeholder="kategory" required>
          </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
      </div>
    </div>
  </div>
</div>
